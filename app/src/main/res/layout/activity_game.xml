<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/button"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:paddingLeft="15sp"
                android:paddingTop="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/levelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/minecraft_font"
                        android:gravity="center"
                        android:text="Level: "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/levelCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/minecraft_font"
                        android:text="0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/scoreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/minecraft_font"
                        android:gravity="center"
                        android:text="Score: "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/scoreCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/minecraft_font"
                        android:text="0"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/remainingTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft_font"
                        android:text="Remaining time: " />

                    <TextView
                        android:id="@+id/remainingTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft_font"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <TextView
                            android:id="@+id/solvedTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/minecraft_font"
                            android:gravity="bottom" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/countdownTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/minecraft_font"
                            android:gravity="center|center_horizontal"
                            android:text="CountDownText"

                            android:textAlignment="center"

                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/currentTask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/minecraft_font"
                            android:text=""
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/currentTaskResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/minecraft_font"
                            android:text=""
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <TextView
                            android:id="@+id/nextTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/minecraft_font" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">
            <!-- Jobb oldal felső rész: Megállítás gomb és Jelenlegi szint -->
            <LinearLayout
                android:id="@+id/topRightLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/stopGameButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/minecraft_font"
                    android:padding="5dp"
                    android:soundEffectsEnabled="false"
                    android:text="Stop Game"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="10dp"
                        android:soundEffectsEnabled="false"
                        android:text="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="2"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="3"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="10dp"
                        android:soundEffectsEnabled="false"
                        android:text="4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="5"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="6"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="7"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="8"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="9"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/num0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="0"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/numC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_border"
                        android:fontFamily="@font/minecraft_font"
                        android:padding="5dp"
                        android:soundEffectsEnabled="false"
                        android:text="C"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Jobb oldal: Numerikus pad gombok -->

            <!-- Jobb oldal alsó rész: Hang és Zene elnémítása gombok -->
            <LinearLayout
                android:id="@+id/bottomRightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/topRightLayout"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/muteSoundButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/minecraft_font"
                    android:padding="5dp"
                    android:soundEffectsEnabled="false"
                    android:text="Mute Sound"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/muteMusicButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"

                    android:background="@drawable/button_border"
                    android:fontFamily="@font/minecraft_font"
                    android:padding="5dp"
                    android:soundEffectsEnabled="false"
                    android:text="Music ON"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>